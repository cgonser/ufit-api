{
  "family": "api",
  "executionRoleArn": "arn:aws:iam::590392040163:role/ecs-task-execution-role",
  "containerDefinitions": [
    {
      "essential": true,
      "memoryReservation": 64,
      "name": "php-fpm",
      "image": "",
      "environment": [
        {
          "name": "APP_ENV",
          "value": "prod"
        },
        {
          "name": "CORS_ALLOW_ORIGIN",
          "value": "^https?://(localhost|127\\.0\\.0\\.1)(:[0-9]+)?$"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "%kernel.project_dir%/config/jwt/private.pem"
        },
        {
          "name": "JWT_PUBLIC_KEY",
          "value": "%kernel.project_dir%/config/jwt/public.pem"
        },
        {
          "name": "JWT_PASSPHRASE",
          "value": "5a1fc680ff6c595dda3714f7a7b66df2"
        },
        {
          "name": "APP_SECRET",
          "valueFrom": "ef819fc48a4f25481ce7e2e84d26ffba"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:eu-central-1:590392040163:parameter/production/database/url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "prod/ecs/api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "php-fpm"
        }
      }
    },
    {
      "essential": true,
      "memoryReservation": 32,
      "name": "nginx",
      "image": "nginx:1-alpine",
      "environment": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "prod/ecs/api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "portMappings": [
        {
          "hostPort": 0,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "php-fpm"
        }
      ],
      "dependsOn": [
        {
          "containerName": "php-fpm",
          "condition": "START"
        }
      ],
      "links": [
        "php-fpm"
      ]
    }
  ]
}